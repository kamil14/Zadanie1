@model Zadanie1.Dtos.NipRequest

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row">
    <div class="col-md-4" style="padding:25px; background-color:#FFFFFFC4">
        <h4>Wyszukaj informacji o przedsiębiorcach po numerze NIP </h4>
        <form asp-action="SearchByNip">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NIP" class="control-label">NIP</label>
                <input asp-for="NIP" class="form-control" />
                <span asp-validation-for="NIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Wyszukaj" class="createbutton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color:black">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
